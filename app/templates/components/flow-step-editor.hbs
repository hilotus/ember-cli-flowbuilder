<div class="flow-builder-step-label">
  <code class="step-name">{{model.name}}</code>
  <code class="step-type">{{model.type}}</code>
</div>

<div class="flow-builder-edit-section-header">Label</div>
<div class="form-group">
  {{input class="form-control" value=model.title placeholder='Title'}}
</div>
<div class="form-group">
  {{textarea class="form-control" value=model.description placeholder='Description'}}
</div>

{{#if isCondition}}
  <div class="flow-builder-edit-section-header">Conditions</div>
  <div class="form-group">
    {{textarea class="form-control" value=model.condition placeholder='Condition'}}
  </div>
{{/if}}
