<div class="flow-builder-step-label">
  <code class="step-name" data-step="{{flow-t 'editStep.stepName'}}">: {{model.name}}</code>
  <code class="step-type" data-step="{{flow-t 'editStep.stepType'}}">: {{model.type}}</code>
</div>

<div class="flow-builder-edit-section-header">{{flow-t 'editStep.ops.label'}}</div>
<div class="form-group">
  {{input class="form-control" value=model.title placeholder=(flow-t 'editStep.ops.title')}}
</div>
<div class="form-group">
  {{textarea class="form-control" value=model.description placeholder=(flow-t 'editStep.ops.desp')}}
</div>

{{#if isCondition}}
  <div class="flow-builder-edit-section-header">Conditions</div>
  <div class="form-group">
    {{textarea class="form-control" value=model.condition placeholder=(flow-t 'editStep.ops.condition')}}
  </div>
{{/if}}
